@model String
@{
    var fieldName = string.IsNullOrEmpty(ViewData.ModelMetadata.DisplayName) ? ViewData.ModelMetadata.PropertyName : ViewData.ModelMetadata.DisplayName;
}
<div class="form-group">
    <label asp-for="@Model" class="form-group has-float-label">
        <input asp-for="@Model" class="form-control" placeholder="***" type="password" />
        <span>@fieldName</span>
    </label>
    <span asp-validation-for="@Model" class="text-danger"></span>
</div>