@using Hamwic.Core.Extension
@model Boolean
@{
    var fieldName = string.IsNullOrEmpty(ViewData.ModelMetadata.DisplayName.SplitOnCapitalLetter())
        ? ViewData.ModelMetadata.PropertyName.SplitOnCapitalLetter()
        : ViewData.ModelMetadata.DisplayName.SplitOnCapitalLetter();
}
<div class="form-group">
    <label asp-for="@Model" class="form-group has-float-label">
        <input asp-for="@Model" class="form-control" type="checkbox" />
        <span>@fieldName</span>
    </label>
    <span asp-validation-for="@Model" class="text-danger"></span>
</div>